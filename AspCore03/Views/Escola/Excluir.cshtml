@model AspCore03.Models.Escola

@{
    ViewData["Title"] = "Excluir Escolas";
}

<h2> Detalhes </h2>    
 
<div class="row">
    <label asp-for="EscolaId" />
    @Html.DisplayFor(Model => Model.EscolaId) <br />

    <label asp-for="Nome" />
    @Html.DisplayFor(Model => Model.Nome)     <br /> 

    <label asp-for="DataFundacao" />
    @Html.DisplayFor(Model => Model.DataFundacao) <br />

    <label asp-for="CustoObra" />
    @Html.DisplayFor(Model => Model.CustoObra) <br />
</div>
<hr />
<form asp-action="Excluir">
    <input asp-for="EscolaId" type="hidden">
   
    <input type="submit" asp-route-idParam="@Model.EscolaId" value="Excluir" class="btn btn-danger">
</form>