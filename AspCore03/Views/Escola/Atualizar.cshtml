@model AspCore03.Models.Escola

@{
    ViewData["Title"] = "Atualizar Escola";
}

<h2> Atualizar Escola </h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Atualizar"> <!-- Formulario-->
            <input asp-for="EscolaId" type="hidden" />

            <div class="form-group">
                <label asp-for="Nome" class="custom-control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>


            <div class="form-group">
                <label asp-for="DataFundacao" class="custom-control-label"></label>
                <input asp-for="DataFundacao" class="form-control" type="datetime-local" asp-format="{0:dd/MM/yyyy}" />
            </div>


            <div class="form-group">
                <label asp-for="CustoObra" class="custom-control-label"></label>
                <input asp-for="CustoObra" class="form-control" />
            </div>

            <input type="submit" value="Atualizar" class="btn btn-success" />
        </form>
    </div>

</div>

<hr />

<a asp-action="Index" class="btn btn-info"> Voltar </a>